<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--video-->
    <include layout="@layout/item_cross_video" />

    <!--local input-->
    <include layout="@layout/item_cross_local_input" />

    <!--remote input-->
    <include layout="@layout/item_cross_remote_input" />

    <!--push-->
    <include layout="@layout/item_cross_push_stream" />

    <!--log-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cross_log"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!--bottom-->
    <include layout="@layout/item_cross_bottom" />


</LinearLayout>