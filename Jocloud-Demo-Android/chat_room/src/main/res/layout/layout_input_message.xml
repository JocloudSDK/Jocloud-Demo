<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="7dp"
    android:paddingVertical="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/etInput"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:hint="@string/go_chat"
            android:textCursorDrawable="@drawable/chat_input_cursor_shape"
            android:background="@null"
            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingStart="12dp"
            android:paddingEnd="5dp"
            android:paddingVertical="8dp"
            android:textColorHint="#C1C0C9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_send"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:paddingHorizontal="11dp"
            android:textSize="13sp"
            android:layout_alignParentEnd="true"
            android:text="@string/send"
            android:textColor="@color/color_w"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="5dp"
            android:background="@drawable/send_shape"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
